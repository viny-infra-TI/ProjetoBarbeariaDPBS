        <thead>

            <tr class="text-center">
                <th>
                    @Html.DisplayNameFor(model => model.FUNCAO)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
          <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.FUNCAO)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.COD_FUNCAO }) |
                    @Html.ActionLink("Details", "Details", new { id = item.COD_FUNCAO }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.COD_FUNCAO })
                </td>
            </tr>
        }

    </table>
